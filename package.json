{
  "name": "node-cli-starter",
  "private": true,
  "version": "1.0.0",
  "main": "dist/src/index.cjs",
  "typings": "dist/src/index.d.ts",
  "scripts": {
    "bundle": "rimraf dist && esbuild --outfile=dist/index.cjs --sourcemap --bundle --platform=node --format=cjs --target=node22.15.0 ./src/index.ts",
    "compile": "tsc",
    "compile:watch": "tsc -w",
    "dev": "nodemon --watch src --watch test --ext ts,json --exec 'yarn bundle && yarn start'",
    "debug": "yarn bundle && node --enable-source-maps --inspect-brk ./dist/index.cjs",
    "debug:test": "node --inspect-brk --experimental-vm-modules yarn vitest run",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "start": "node --enable-source-maps ./dist/index.cjs",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@babel/core": "7.27.1",
    "@babel/preset-env": "7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.26.0",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "22.15.0",
    "@vitest/coverage-v8": "^3.1.3",
    "@vitest/ui": "3.1.3",
    "clipanion": "^4.0.0-rc.4",
    "esbuild": "0.21.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.1.0",
    "nodemon": "3.1.10",
    "prettier": "^3.5.3",
    "rimraf": "5.0.10",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vitest": "^3.1.3"
  }
}